version: '3'

services:

    jenkins:
        ports:
            - 8081:8080

    redmine:
        environment:
            DB_ADAPTER: postgresql
            DB_HOST: postgres
            DB_PORT: 5432
            DB_USER: redmine
            DB_PASS: password
            DB_NAME: redmine_production
        ports:
            - 8082:80

    postgres:
        environment:
            DB_USER: redmine
            DB_PASS: password
